<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ChangePasswordController">
    <children>
        <Label fx:id="title_label" layoutX="86.0" prefHeight="82.0" prefWidth="443.0" text="Change Password" textAlignment="JUSTIFY" textFill="#c70000">
            <font>
                <Font name="Cambria Bold" size="54.0" />
            </font>
        </Label>
      <Label layoutX="115.0" layoutY="126.0" text="Userame" textFill="#c70000">
         <font>
            <Font name="Cambria Bold" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsername" editable="false" layoutX="291.0" layoutY="125.0" prefHeight="26.0" prefWidth="174.0" />
      <Label layoutX="114.0" layoutY="167.0" text="Current Password" textFill="#c70000">
         <font>
            <Font name="Cambria Bold" size="19.0" />
         </font>
      </Label>
      <PasswordField fx:id="currPass" layoutX="291.0" layoutY="166.0" prefHeight="26.0" prefWidth="174.0" />
      <Label layoutX="115.0" layoutY="208.0" text="New Password" textFill="#c70000">
         <font>
            <Font name="Cambria Bold" size="19.0" />
         </font>
      </Label>
      <PasswordField fx:id="newPass" layoutX="292.0" layoutY="207.0" prefHeight="26.0" prefWidth="174.0" />
      <Label layoutX="116.0" layoutY="252.0" text="Confirm Password" textFill="#c70000">
         <font>
            <Font name="Cambria Bold" size="19.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmPass" layoutX="293.0" layoutY="251.0" prefHeight="26.0" prefWidth="174.0" />
      <Button fx:id="ChangeButton" layoutX="308.0" layoutY="328.0" mnemonicParsing="false" onAction="#pressChange" prefHeight="26.0" prefWidth="85.0" text="Change" textFill="#c70000">
         <font>
            <Font name="Cambria Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="CancelButton" layoutX="405.0" layoutY="328.0" mnemonicParsing="false" onAction="#pressCancel" prefHeight="26.0" prefWidth="85.0" text="Cancel" textFill="#c70000">
         <font>
            <Font name="Cambria Bold" size="18.0" />
         </font>
      </Button>
    </children>

</AnchorPane>
