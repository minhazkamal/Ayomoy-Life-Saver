        <ImageView accessibleRole="TEXT_AREA" blendMode="OVERLAY" fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true">
            <image>
                <Image url="@images/Presentation1_Proposal.jpg" />
            </image>
        </ImageView>
        <Button fx:id="back_button" layoutX="27.0" layoutY="26.0" mnemonicParsing="false" onAction="#pressBack" prefHeight="42.0" prefWidth="103.0" text="Log Out" textFill="#c70000">
            <font>
                <Font name="Cambria Bold" size="18.0" />
            </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>
        <Label fx:id="title_label" alignment="CENTER" layoutX="325.0" layoutY="14.0" prefHeight="82.0" prefWidth="401.0" text="ADMIN PANEL" textAlignment="JUSTIFY" textFill="#c70000">
            <font>
                <Font name="Cambria Bold" size="54.0" />
            </font>
        </Label>
        <Button fx:id="changePass" layoutX="422.0" layoutY="407.0" mnemonicParsing="false" onAction="#pressChangePass" prefHeight="49.0" prefWidth="189.0" text="Change Password" textFill="#c70000">
            <font>
                <Font name="Cambria Bold" size="18.0" />
            </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>
        <Button fx:id="panelButton" layoutX="353.0" layoutY="156.0" mnemonicParsing="false" onAction="#pressDonorList" prefHeight="81.0" prefWidth="327.0" text="Donor's List" textFill="#c70000">
