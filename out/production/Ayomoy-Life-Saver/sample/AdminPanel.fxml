<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AdminPanelController">
    <children>
      <ImageView fitHeight="143.0" fitWidth="188.0" layoutX="94.0" layoutY="407.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/admin_panel.png" />
