                <Font name="Cambria Bold" size="19.0" />
            </font></Label>
        <TextField fx:id="p_mobile" editable="false" layoutX="769.0" layoutY="128.0" />
        <Label layoutX="122.0" layoutY="231.0" text="Location" textFill="#c70000">
            <font>
                <Font name="Cambria Bold" size="19.0" />
            </font>
        </Label>
      <TextField fx:id="showLocation" editable="false" layoutX="257.0" layoutY="230.0" prefHeight="26.0" prefWidth="238.0" />
        <Label layoutX="632.0" layoutY="174.0" text="Complications" textFill="#c70000">
            <font>
                <Font name="Cambria Bold" size="19.0" />
            </font>
        </Label>
        <TextField fx:id="complications" alignment="TOP_LEFT" editable="false" layoutX="769.0" layoutY="173.0" prefHeight="97.0" prefWidth="149.0" promptText="e.g accident">
